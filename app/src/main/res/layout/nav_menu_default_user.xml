<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <LinearLayout
                android:id="@+id/nav_item_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_person_black_24dp" />

                <TextView
                    android:id="@+id/nav_item_login_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="Login"
                    android:textColor="@color/nav_item_text"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/nav_item_notification"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_notifications_black_24dp" />

                <TextView
                    android:id="@+id/nav_item_notification_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="Notification"
                    android:textColor="@color/nav_item_text"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_item_contactus"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <TextView
                    android:id="@+id/nav_item_contactus_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="Contact Us"
                    android:textColor="@color/nav_item_text"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/nav_item_rateus"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_thumb_up_black_24dp" />

                <TextView
                    android:id="@+id/nav_item_rateus_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="Rate Us"
                    android:textColor="@color/nav_item_text"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nav_subitem_title_communicate_text"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Communicate"
                android:textColor="@color/nav_subitem_text"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/nav_item_share"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"
                    android:src="@drawable/ic_share_black_24dp" />

                <TextView
                    android:id="@+id/nav_item_share_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="Share"
                    android:textColor="@color/nav_item_text"
                    android:textSize="14dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>